@{
    Layout = "_Layout";
}
@model IQueryable<Product>
<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenu")
    </div>
    <div class="col-md-9">
        @foreach (Product product in Model)
        {
            <partial name="_ProductCard" model="@product" />
        }
    </div>
</div>
</div>

